        "# Definición de la clase Producto\n",
        "class Producto:\n",
        "    def __init__(self, nombre, precio, cantidad):\n",
        "\n",
        "        self.nombre = nombre\n",
        "        self.precio = precio\n",
        "        self.cantidad = cantidad\n",
        "\n",
        "    def mostrar_info(self):\n",
        "        # Retorna una fila con los datos del producto para la tabla\n",
        "        return f\"|{self.nombre:<8} |{self.cantidad} unidades  |{self.precio} pesos  |\"\n",
        "\n",
        "# Lista de productos predefinidos con sus atributos\n",
        "productos = [\n",
        "    Producto(\"pan\", 2000, 10),\n",
        "    Producto(\"leche\", 5000, 15),\n",
        "    Producto(\"huevo\", 500, 200)\n",
        "]\n",
        "\n",
        "# Ciclo que permite interactuar continuamente con el usuario\n",
        "while True:\n",
        "\n",
        "    consulta = input(\"¿Qué deseas saber? (producto 1, producto 2, producto 3, precio 1, precio 2, precio 3, cantidad 1, cantidad 2, cantidad 3, salir): \").lower()\n",
        "\n",
        "    # Responde con el nombre del producto, el precio y la cantidad correspondiente\n",
        "    if consulta == \"producto 1\":\n",
        "        print(f\"El producto 1 es: {productos[0].nombre}\")\n",
        "    elif consulta == \"producto 2\":\n",
        "        print(f\"El producto 2 es: {productos[1].nombre}\")\n",
        "    elif consulta == \"producto 3\":\n",
        "        print(f\"El producto 3 es: {productos[2].nombre}\")\n",
        "    elif consulta == \"precio 1\":\n",
        "        print(f\"El precio de {productos[0].nombre} es: {productos[0].precio} pesos\")\n",
        "    elif consulta == \"precio 2\":\n",
        "        print(f\"El precio de {productos[1].nombre} es: {productos[1].precio} pesos\")\n",
        "    elif consulta == \"precio 3\":\n",
        "        print(f\"El precio de {productos[2].nombre} es: {productos[2].precio} pesos\")\n",
        "    elif consulta == \"cantidad 1\":\n",
        "        print(f\"La cantidad de {productos[0].nombre} es: {productos[0].cantidad} unidades\")\n",
        "    elif consulta == \"cantidad 2\":\n",
        "        print(f\"La cantidad de {productos[1].nombre} es: {productos[1].cantidad} unidades\")\n",
        "    elif consulta == \"cantidad 3\":\n",
        "        print(f\"La cantidad de {productos[2].nombre} es: {productos[2].cantidad} unidades\")\n",
        "    elif consulta == \"salir\":\n",
        "        break\n",
        "    else:\n",
        "        print(\"Comando no reconocido.\")\n",
        "\n",
        "# Muestra el inventario en forma de tabla\n",
        "print(\"\\nResumen:\")\n",
        "print(\"|Producto |Cantidad     |Precio     |\")\n",
        "print(\"|---------|------------|-----------|\")\n",
        "for producto in productos:\n",
        "    print(producto.mostrar_info())\n"
